class Solution {
    public int search(int[] arr, int target) {
        int si = 0 ; 
        int ei = arr.length - 1 ;
        int mid ;
        while(si<=ei){
            mid = si + (ei - si) / 2 ;
            if(arr[mid] == target){
                return mid ;
            }else if(arr[mid] < target){
                si = mid + 1 ;
            }else{
                ei = mid - 1 ;
            }
        }
        return -1 ;
    }
}
